{
  "name": "jolocom-verification-service",
  "version": "0.0.1",
  "description": "Jolocom verification service",
  "main": "build/main.js",
  "scripts": {
    "start": "npm run prepare && npm run dev --",
    "dev": "NODE_ENV=dev node build/main.js",
    "devmon": "NODE_ENV=dev concurrently 'tsc --watch' 'nodemon --watch build build/main.js'",
    "prepare": "tsc",
    "typings": "typings",
    "prepare-and-test": "npm run prepare && mocha build/**/*.test.js",
    "test:watch": "NODE_ENV=dev concurrently 'tsc --watch' 'mocha -w build/**/*.test.js'"
  },
  "author": "",
  "dependencies": {
    "bluebird": "^3.1.1",
    "initd-forever": "^0.1.8",
    "lodash": "^4.6.1",
    "nodemailer": "^2.3.0",
    "nodemon": "^1.9.1",
    "sinon": "^1.17.3",
    "source-map-support": "^0.4.0",
    "yargs": "^4.2.0"
  },
  "devDependencies": {
    "@types/chai": "^3.4.35",
    "@types/mocha": "^2.2.40",
    "chai": "^3.5.0",
    "chai-string": "^1.2.0",
    "concurrently": "^2.0.0",
    "mocha": "^2.4.5",
    "node-inspector": "^0.12.7",
    "proxyquire": "^1.7.3",
    "typescript": "^1.8.2",
    "typings": "^0.6.8"
  }
}
